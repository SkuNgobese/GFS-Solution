@model IEnumerable<GFS.Models.StockCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.category)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.stockCatNo }) |
                @Html.ActionLink("Details", "Details", new { id = item.stockCatNo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.stockCatNo })
            </td>
        </tr>
    }

</table>
